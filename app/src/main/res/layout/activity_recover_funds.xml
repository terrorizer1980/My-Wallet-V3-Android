<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <include layout="@layout/toolbar_general" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <TextView
                    style="@style/Text.Standard.14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standard_margin"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="@dimen/standard_margin"
                    android:layout_marginBottom="32dp"
                    android:gravity="center_horizontal"
                    android:text="@string/recover_funds_instructions" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/standard_margin"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="@dimen/standard_margin"
                    android:layout_marginBottom="16dp"
                    android:hint="@string/recovery_passphrase">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/field_passphrase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/recovery_passphrase"
                        android:imeOptions="actionGo"
                        android:inputType="textNoSuggestions|textVisiblePassword"
                        android:maxLines="1"
                        android:scrollHorizontally="true" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/button_continue"
            style="@style/CtaButton.Blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/recover_funds"
            android:text="@string/recover_funds" />

    </LinearLayout>
</layout>
